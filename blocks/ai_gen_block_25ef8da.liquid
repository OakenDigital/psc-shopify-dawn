{% doc %}
  @prompt
    row with 5 images that I can insert
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-row-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.spacing }}px;
    width: 100%;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
  }

  .ai-image-row-item-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-image-row-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.aspect_ratio }}%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-image-row-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-image-row-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-image-row-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  @media screen and (max-width: 749px) {
    .ai-image-row-{{ ai_gen_id }} {
      flex-wrap: wrap;
      gap: {{ block.settings.spacing_mobile }}px;
    }

    .ai-image-row-item-{{ ai_gen_id }} {
      flex-basis: calc(50% - {{ block.settings.spacing_mobile | divided_by: 2 }}px);
    }

    .ai-image-row-item-{{ ai_gen_id }}:nth-child(5) {
      flex-basis: 100%;
    }
  }
{% endstyle %}

<div class="ai-image-row-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% for i in (1..5) %}
    {% liquid
      assign image_key = 'image_' | append: i
      assign image = block.settings[image_key]
    %}
    
    <div class="ai-image-row-item-{{ ai_gen_id }}">
      <div class="ai-image-row-wrapper-{{ ai_gen_id }}">
        {% if image %}
          <img
            src="{{ image | image_url: width: 800 }}"
            alt="{{ image.alt | escape }}"
            loading="lazy"
            width="{{ image.width }}"
            height="{{ image.height }}"
            class="ai-image-row-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-image-row-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>

