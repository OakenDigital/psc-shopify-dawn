{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .dealer-info-section {
    max-width: 900px;
    margin: 0 auto;
  }

  .dealer-info-section__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .dealer-info-section__content {
    margin-bottom: 3rem;
  }

  .dealer-info-section__list {
    list-style: none;
    padding: 0;
    margin: 2rem 0;
  }

  .dealer-info-section__list li {
    padding: 1rem 0;
    padding-left: 2rem;
    position: relative;
    line-height: 1.6;
  }

  .dealer-info-section__list li:before {
    content: "✓";
    position: absolute;
    left: 0;
    color: var(--color-button);
    font-weight: bold;
    font-size: 1.2rem;
  }

  .dealer-info-section__login-box {
    background: #f9fafb;
    border: 2px solid #e5e5e7;
    border-radius: 8px;
    padding: 2rem;
    text-align: center;
    margin: 2rem 0;
  }

  .dealer-info-section__login-box h3 {
    margin-bottom: 1rem;
  }

  .dealer-info-section__login-form {
    max-width: 400px;
    margin: 1.5rem auto 0;
  }

  .dealer-info-section__login-form input {
    width: 100%;
    padding: 0.75rem;
    margin-bottom: 1rem;
    border: 1px solid #d1d5db;
    border-radius: 4px;
  }

  .dealer-info-section__login-form button {
    width: 100%;
  }

  .dealer-info-section__tiers {
    margin: 3rem 0;
  }

  .dealer-tier {
    margin-bottom: 2.5rem;
    padding-bottom: 2.5rem;
    border-bottom: 1px solid #e5e5e5;
  }

  .dealer-tier:last-child {
    border-bottom: none;
  }

  .dealer-tier__header {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
  }

  .dealer-tier__icon {
    width: 40px;
    height: 40px;
    background: var(--gradient-base-background-1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 1rem;
    font-weight: bold;
  }

  .dealer-tier__title {
    font-size: 1.3rem;
    font-weight: bold;
    margin: 0;
  }

  .dealer-tier__description {
    margin-left: 56px;
    color: #666;
    line-height: 1.6;
  }

  .dealer-tier__features {
    list-style: none;
    padding: 0;
    margin: 1rem 0 0 56px;
  }

  .dealer-tier__features li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
  }

  .dealer-tier__features li:before {
    content: "✓";
    position: absolute;
    left: 0;
    color: #22c55e;
    font-weight: bold;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="dealer-info-section">
      {%- unless section.settings.title == blank -%}
        <div class="dealer-info-section__header">
          <h2 class="title inline-richtext {{ section.settings.heading_size }}">
            {{ section.settings.title }}
          </h2>
        </div>
      {%- endunless -%}

      {%- if section.settings.show_login_box -%}
        <div class="dealer-info-section__login-box">
          <h3>Already a Dealer?</h3>
          <p>Login to view pricing, inventory, and exclusive dealer resources.</p>
          <div class="dealer-info-section__login-form">
            <a
              href="{% if section.settings.login_link != blank %}{{ section.settings.login_link }}{% else %}{{ routes.account_login_url }}{% endif %}"
              class="button button--primary"
              style="width: 100%; text-align: center;"
            >
              Login to My Dashboard →
            </a>
          </div>
        </div>
      {%- endif -%}

      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'content' -%}
            <div class="dealer-info-section__content" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h3>{{ block.settings.heading }}</h3>
              {%- endif -%}
              {%- if block.settings.content != blank -%}
                <div class="rte">{{ block.settings.content }}</div>
              {%- endif -%}
            </div>

          {%- when 'list' -%}
            <div class="dealer-info-section__content" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h3>{{ block.settings.heading }}</h3>
              {%- endif -%}
              {%- if block.settings.description != blank -%}
                <p>{{ block.settings.description }}</p>
              {%- endif -%}
              {%- if block.settings.list_items != blank -%}
                <ul class="dealer-info-section__list">
                  {%- assign items = block.settings.list_items | split: '|' -%}
                  {%- for item in items -%}
                    <li>{{ item }}</li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>

          {%- when 'dealer_tier' -%}
            <div class="dealer-tier" {{ block.shopify_attributes }}>
              <div class="dealer-tier__header">
                <div class="dealer-tier__icon">{{ forloop.index }}</div>
                <h3 class="dealer-tier__title">{{ block.settings.tier_name }}</h3>
              </div>
              {%- if block.settings.description != blank -%}
                <p class="dealer-tier__description">{{ block.settings.description }}</p>
              {%- endif -%}
              {%- if block.settings.features != blank -%}
                <ul class="dealer-tier__features">
                  {%- assign features = block.settings.features | split: '|' -%}
                  {%- for feature in features -%}
                    <li>{{ feature }}</li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Dealer Information",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Section Title"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Small" },
        { "value": "h1", "label": "Medium" },
        { "value": "h0", "label": "Large" },
        { "value": "hxl", "label": "Extra Large" }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "checkbox",
      "id": "show_login_box",
      "label": "Show Login Box",
      "default": true
    },
    {
      "type": "url",
      "id": "login_link",
      "label": "Login Link"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "content",
      "name": "Content Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    },
    {
      "type": "list",
      "name": "List Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "textarea",
          "id": "list_items",
          "label": "List Items",
          "info": "Separate items with | character"
        }
      ]
    },
    {
      "type": "dealer_tier",
      "name": "Dealer Tier",
      "settings": [
        {
          "type": "text",
          "id": "tier_name",
          "label": "Tier Name",
          "default": "Dealer Access"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "textarea",
          "id": "features",
          "label": "Features",
          "info": "Separate features with | character"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Dealer Information"
    }
  ]
}
{% endschema %}
