{%- style -%}
  .jeep-hero-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .jeep-hero-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .jeep-collection-hero {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0;
    align-items: center;
    background-color: {{ section.settings.background_color }};
    min-height: 500px;
  }

  @media screen and (min-width: 990px) {
    .jeep-collection-hero {
      grid-template-columns: 1fr 1fr;
      min-height: 600px;
    }
  }

  .jeep-collection-hero__content {
    padding: 4rem 2rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    max-width: 650px;
    margin: 0 auto;
  }

  @media screen and (min-width: 990px) {
    .jeep-collection-hero__content {
      padding: 6rem 0rem;
      margin: 0;
      padding-right: 4rem;
    }
  }

  .jeep-collection-hero__eyebrow {
    font-size: 1.4rem;
    font-weight: bold;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: {{ section.settings.eyebrow_color }};
    margin: 0 0 1rem 0;
  }

  .jeep-collection-hero__title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.1;
    color: {{ section.settings.title_color }};
    margin: 0 0 1.5rem 0;
  }

  @media screen and (min-width: 750px) {
    .jeep-collection-hero__title {
      font-size: calc(var(--font-heading-scale) * 5rem);
    }
  }

  .jeep-collection-hero__description {
    line-height: 1.6;
    color: {{ section.settings.text_color }};
    margin: 0 0 2rem 0;
  }

  .jeep-collection-hero__buttons {
    display: flex;
    gap: 1rem;
  }

  @media screen and (max-width: 750px) {
    .jeep-collection-hero__buttons {
      flex-wrap: wrap;
    }
    .jeep-collection-hero__button {
      width: 100%;
    }
  }

  .jeep-collection-hero__button {
    display: inline-block;
    padding: 1rem 2rem;
    text-decoration: none;
    text-align: center;
    border-radius: 0;
    transition: all 0.2s ease;
    white-space: nowrap;
    cursor: pointer;
  }

  .jeep-collection-hero__button--primary {
    background-color: {{ section.settings.button_primary_bg }};
    color: {{ section.settings.button_primary_text }};
  }

  .jeep-collection-hero__button--primary:hover {
    background-color: {{ section.settings.button_primary_bg | color_darken: 10 }};
  }

  .jeep-collection-hero__button--secondary {
    background-color: {{ section.settings.button_secondary_bg }};
    color: {{ section.settings.button_secondary_text }};
  }

  .jeep-collection-hero__button--secondary:hover {
    background-color: {{ section.settings.button_secondary_bg | color_darken: 10 }};
  }

  .jeep-collection-hero__image-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 400px;
    overflow: hidden;
  }

  @media screen and (min-width: 990px) {
    .jeep-collection-hero__image-wrapper {
      min-height: 600px;
    }
  }

  .jeep-collection-hero__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .jeep-collection-hero__compare-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9375rem;
    font-weight: 600;
    color: {{ section.settings.link_color }};
    text-decoration: none;
    margin-top: 1rem;
    transition: gap 0.2s ease;
  }

  .jeep-collection-hero__compare-link:hover {
    gap: 0.75rem;
  }

  .jeep-collection-hero__compare-link svg {
    width: 16px;
    height: 16px;
  }
{%- endstyle -%}

<div class="jeep-hero-{{ section.id }} color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    <div class="jeep-collection-hero">
      <div class="jeep-collection-hero__content">
        {%- if section.settings.eyebrow != blank -%}
          <p class="jeep-collection-hero__eyebrow">
            {{ section.settings.eyebrow }}
          </p>
        {%- endif -%}

        {%- if section.settings.heading != blank -%}
          <h1 class="jeep-collection-hero__title">
            {{ section.settings.heading }}
          </h1>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <div class="jeep-collection-hero__description">
            <p>{{ section.settings.description }}</p>
          </div>
        {%- endif -%}

        <div class="jeep-collection-hero__buttons">
          {%- if section.settings.button_primary_label != blank -%}
            <a
              href="{{ section.settings.button_primary_link }}"
              class="jeep-collection-hero__button jeep-collection-hero__button--primary"
            >
              {{ section.settings.button_primary_label }}
            </a>
          {%- endif -%}

          {%- if section.settings.button_secondary_label != blank -%}
            <a
              href="{{ section.settings.button_secondary_link }}"
              class="jeep-collection-hero__button jeep-collection-hero__button--secondary"
            >
              {{ section.settings.button_secondary_label }}
            </a>
          {%- endif -%}
        </div>

        {%- if section.settings.compare_link_label != blank -%}
          <a
            href="{{ section.settings.compare_link_url }}"
            class="jeep-collection-hero__compare-link"
          >
            {{ section.settings.compare_link_label }}
            <svg viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5.5 3L10.5 8L5.5 13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        {%- endif -%}
      </div>

      <div class="jeep-collection-hero__image-wrapper">
        {%- if section.settings.image != blank -%}
          {%- assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio -%}
          {{
            section.settings.image
            | image_url: width: 1500
            | image_tag:
              loading: 'eager',
              width: section.settings.image.width,
              height: image_height,
              class: 'jeep-collection-hero__image',
              sizes: '(min-width: 990px) 50vw, 100vw',
              widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000'
          }}
        {%- else -%}
          {{ 'hero-apparel-1' | placeholder_svg_tag: 'jeep-collection-hero__image' }}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

