{%- style -%}
  .trail-score-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .trail-score-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .psc-trail-score-card {
    display: grid;
    grid-template-columns: 1fr;
    border-radius: {{ section.settings.border_radius }}px;
    overflow: hidden;
    max-width: {{ section.settings.max_width }}px;
  }

  @media screen and (min-width: 750px) {
    .psc-trail-score-card {
      grid-template-columns: {{ section.settings.left_width }}% {{ 100 | minus: section.settings.left_width }}%;
    }
  }

  .psc-trail-score-card__left {
    background-color: {{ section.settings.left_background }};
    color: {{ section.settings.left_text_color }};
    padding: 2rem 1rem;
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    text-align: center;
  }

  @media screen and (min-width: 750px) {
    .psc-trail-score-card__left {
      padding: 2rem 1rem;
    }
  }

  .psc-trail-score-card__logo {
    width: 100%;
    max-width: 180px;
  }

  .psc-trail-score-card__logo img {
    width: 100%;
    height: auto;
    display: block;
  }

  .psc-trail-score-card__label {
    font-size: 1.125rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin: 0;
  }

  .psc-trail-score-card__icon {
    width: 130px;
    height: 60px;
  }

  .psc-trail-score-card__icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .psc-trail-score-card__right {
    background-color: {{ section.settings.right_background }};
    color: {{ section.settings.right_text_color }};
    padding: 2rem 1.5rem;
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 0.75rem;
    align-items: center;
  }

  .psc-trail-score-card__right-text {
    display: flex;
    flex-direction: column;
  }

  @media screen and (min-width: 750px) {
    .psc-trail-score-card__right {
      padding: 0rem 2rem;
    }
  }

  .psc-trail-score-card__score {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1;
    margin: 0;
    color: {{ section.settings.score_color }};
  }

  @media screen and (min-width: 750px) {
    .psc-trail-score-card__score {
      font-size: 3.5rem;
    }
  }

  .psc-trail-score-card__title {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
    color: {{ section.settings.title_color }};
  }

  @media screen and (min-width: 750px) {
    .psc-trail-score-card__title {
      font-size: 1.75rem;
    }
  }

  .psc-trail-score-card__description {
    font-size: 0.9375rem;
    line-height: 1.5;
    margin: 0;
    color: {{ section.settings.description_color }};
  }

  @media screen and (min-width: 750px) {
    .psc-trail-score-card__description {
      font-size: 1rem;
    }
  }
{%- endstyle -%}

{%- liquid
  assign trail_score_value = product.metafields[section.settings.metafield_namespace][section.settings.metafield_key]
  assign show_trail_score = false
  assign score_data = null

  if trail_score_value != blank
    assign score_num = trail_score_value | times: 1
    if score_num >= 1 and score_num <= 5
      assign show_trail_score = true

      case score_num
        when 1
          assign score_data = section.settings.score_1_data
        when 2
          assign score_data = section.settings.score_2_data
        when 3
          assign score_data = section.settings.score_3_data
        when 4
          assign score_data = section.settings.score_4_data
        when 5
          assign score_data = section.settings.score_5_data
      endcase
    endif
  endif
-%}

{%- if show_trail_score and score_data != blank -%}
  {%- assign score_parts = score_data | split: '|' -%}
  {%- assign score_title = score_parts[0] | default: '' -%}
  {%- assign score_description = score_parts[1] | default: '' -%}

  <div class="trail-score-{{ section.id }} color-{{ section.settings.color_scheme }}">
    <div class="page-width">
      <div class="psc-trail-score-card">
        <div class="psc-trail-score-card__left">
          {%- if section.settings.logo_image != blank -%}
            <div class="psc-trail-score-card__logo">
              <img
                src="{{ section.settings.logo_image | image_url: width: 360 }}"
                alt="{{ section.settings.logo_alt | default: 'PSC' }}"
                width="180"
                height="auto"
                loading="lazy"
              >
            </div>
          {%- endif -%}

          {%- if section.settings.label_text != blank -%}
            <p class="psc-trail-score-card__label">{{ section.settings.label_text }}</p>
          {%- endif -%}

          {%- if section.settings.icon_image != blank -%}
            <div class="psc-trail-score-card__icon">
              <img
                src="{{ section.settings.icon_image | image_url: width: 120 }}"
                alt=""
                width="60"
                height="60"
                loading="lazy"
              >
            </div>
          {%- endif -%}
        </div>

        <div class="psc-trail-score-card__right">
          <p class="psc-trail-score-card__score">{{ trail_score_value }}/5</p>

          <div class="psc-trail-score-card__right-text">
            {%- if score_title != blank -%}
              <h3 class="psc-trail-score-card__title">{{ score_title }}</h3>
            {%- endif -%}

            {%- if score_description != blank -%}
              <p class="psc-trail-score-card__description">{{ score_description }}</p>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
{%- endif -%}

